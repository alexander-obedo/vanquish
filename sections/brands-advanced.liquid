{% unless settings.slides_mode %}
<div class="holder global_width {{ section.settings.outer_margin }}">
    <div class="container">
        <h2 class="h1-style text-center">{{ section.settings.title }}</h2>
        <div class="brand-prd-carousel vert-dots" data-slick='{"fade": true}'>
            {% for block in section.blocks %}
                {% if block.settings.enable %}
                    <div class="brand-prd">
                    <div class="brand-prd-image">
                        <div class="carousel-inside slide" data-ride="carousel">
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    {%- assign _img = block.settings.brand_slide_1 -%}
                                    {%- assign _img_size = '570x339' -%}
                                    {%- if _img -%}
                                        <img class="lazyload blur-up"
                                             data-src="{{ _img | img_url: _img_size }}"
                                             data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                             data-aspectratio="{{ _img.aspect_ratio }}"
                                             data-sizes="auto"
                                             alt="{{ _img.alt | escape }}">
                                    {%- else -%}
                                        {%- include 'image-placeholder-aspect-ratio', width: 570, height: 340 -%}
                                    {%- endif -%}
                                </div>
                                {% if block.settings.brand_slide_2 %}
                                    <div class="item">
                                        {%- assign _img = block.settings.brand_slide_2 -%}
                                        {%- assign _img_size = '570x339' -%}
                                        {%- if _img -%}
                                            <img class="lazyload blur-up"
                                                 data-src="{{ _img | img_url: _img_size }}"
                                                 data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                                 data-aspectratio="{{ _img.aspect_ratio }}"
                                                 data-sizes="auto"
                                                 alt="{{ _img.alt | escape }}">
                                        {%- else -%}
                                            {%- include 'image-placeholder-aspect-ratio', width: 570, height: 340 -%}
                                        {%- endif -%}
                                    </div>
                                {% endif %}
                                {% if block.settings.brand_slide_3 %}
                                    <div class="item">
                                        {%- assign _img = block.settings.brand_slide_3 -%}
                                        {%- assign _img_size = '570x339' -%}
                                        {%- if _img -%}
                                            <img class="lazyload blur-up"
                                                 data-src="{{ _img | img_url: _img_size }}"
                                                 data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                                 data-aspectratio="{{ _img.aspect_ratio }}"
                                                 data-sizes="auto"
                                                 alt="{{ _img.alt | escape }}">
                                        {%- else -%}
                                            {%- include 'image-placeholder-aspect-ratio', width: 570, height: 340 -%}
                                        {%- endif -%}
                                    </div>
                                {% endif %}
                            </div>
                            {% if block.settings.brand_slide_2 or block.settings.brand_slide_3 %} <span class="carousel-control next"></span> <span class="carousel-control prev"></span>{% endif %}
                        </div>
                    </div>
                        <div class="brand-prd-info">
                            <div class="inside">
                                <div class="text-center">
                                    {% assign _img = block.settings.image %}
                                    {% assign _img_size = '180x' %}
                                    {% if _img %}
                                        <img class="lazyload blur-up"
                                             data-src="{{ _img | img_url: _img_size }}"
                                             data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                             data-aspectratio="{{ _img.aspect_ratio }}"
                                             data-sizes="auto"
                                             alt="{{ _img.alt | escape }}">
                                    {%- else -%}
                                        {% include 'image-placeholder-aspect-ratio', width: 180, height: 53 %}
                                    {%- endif -%}
                                </div>
                                <p>{{ block.settings.description }}</p>
                                <div class="text-center">{{ block.settings.description_links }}</div>
                            </div>
                        </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endunless %}
