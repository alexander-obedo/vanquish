{% unless settings.slides_mode %}
{% if section.settings.enable %}
    <div class="holder py-3 py-md-4 fullboxed holder-bg-18 global_width {{ section.settings.outer_margin }}">
        <div class="container">
            <ul class="brand-carousel js-brand-carousel-full slick-arrows-aside-simple" data-slick='{"arrows": false, "autoplay": true, "infinite": true, "speed": 1500}'>
                {% for block in section.blocks %}
                    {% if block.settings.enable %}
                        <li><a href="{{ block.settings.link }}" target="{{ block.settings.link_target }}"  title="{{ block.settings.title }}">
                                {% assign _img = block.settings.image %}
                                {% assign _img_size = '300x' %}
                                {% if _img %}
                                    <img class="lazyload blur-up"
                                         data-src="{{ _img | img_url: _img_size }}"
                                         data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                         data-aspectratio="{{ _img.aspect_ratio }}"
                                         data-sizes="auto"
                                         alt="{{ block.settings.title }}">
                                {%- else -%}
                                    {% include 'image-placeholder-aspect-ratio', width: 150, height: 80, text: '&nbsp;' %}
                                {%- endif -%}
                            </a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}
{% endunless %}
