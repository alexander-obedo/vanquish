{% unless settings.slides_mode %}
<div class="holder fullwidth  {{ section.settings.outer_margin }}">
	<div class="container">
		<div class="card-imgtext-wrap">
			<div class="row vert-margin flex-row-reverse">
				<div class="col order-1">
					<div class="card-imgtext">
						<div class="card-imgtext-image">
                            {% assign _img = section.settings.image %}
                            {% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                            {%- if _img -%}
								<img class="lazyload blur-up w-100"
									 data-src="{{ img_url }}"
									 data-widths="[720, 900, 1200, 1800, 2400]"
									 data-aspectratio="{{ _img.aspect_ratio }}"
									 data-sizes="auto"
									 alt="{{ section.settings.caption_1 }}">
                            {%- else -%}
                                {%- include 'image-placeholder-aspect-ratio', width: 416, height: 332 -%}
                            {%- endif -%}
						</div>
						<div class="card-imgtext-text">
							<h2 class="card-imgtext-title">{{ section.settings.caption_1 }}</h2>
							<p>{{ section.settings.desc_1 }}</p>
							<a href="{{ section.settings.link | default:'#' }}" class="btn-decor">{{ section.settings.link_title }}</a>
						</div>
					</div>
				</div>
				<div class="col-double order-2">
					<div class="card-imgtext">
						<div class="card-imgtext-image">
                            {% assign _img = section.settings.image_2 %}
                            {% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                            {%- if _img -%}
								<img class="lazyload blur-up w-100"
									 data-src="{{ img_url }}"
									 data-widths="[720, 900, 1200, 1800, 2400]"
									 data-aspectratio="{{ _img.aspect_ratio }}"
									 data-sizes="auto"
									 alt="{{ section.settings.caption_2 }}">
                            {%- else -%}
                                {%- include 'image-placeholder-aspect-ratio', width: 690, height: 319 -%}
                            {%- endif -%}
						</div>
						<div class="card-imgtext-text">
							<h2 class="card-imgtext-title">{{ section.settings.caption_2 }}</h2>
							<p>{{ section.settings.desc_2 }}</p>
							<a href="{{ section.settings.link_2 | default:'#' }}" class="btn-decor">{{ section.settings.link_title_2 }}</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endunless %}
