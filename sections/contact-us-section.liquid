<div class="holder mt-0">
    <div class="container">
        <div class="page-title text-center">
            <div class="title">
                <h1>{{ page.title }}</h1>
            </div>
        </div>
        <div class="row vert-margin-double justify-content-center">
            <div class="col-sm-6 col-lg-4">
                <h2>{{ section.settings.title_1 }}</h2>
                {% if section.settings.info_1_l != blank %}
                <div class="contact-info">
                    <div class="contact-info-icon">
                        <i class="{{ section.settings.info_1_i }}"></i>
                    </div>
                    <div class="contact-info-title">
                        {{ section.settings.info_1_l }}
                    </div>
                    <div class="contact-info-text">
                        {{ section.settings.info_1_r }}
                    </div>
                </div>
                {% endif %}

                {% if section.settings.info_2_l != blank %}
                    <div class="contact-info">
                        <div class="contact-info-icon">
                            <i class="{{ section.settings.info_2_i }}"></i>
                        </div>
                        <div class="contact-info-title">
                            {{ section.settings.info_2_l }}
                        </div>
                        <div class="contact-info-text">
                            {{ section.settings.info_2_r }}
                        </div>
                    </div>
                {% endif %}

                {% if section.settings.info_3_l != blank %}
                    <div class="contact-info">
                        <div class="contact-info-icon">
                            <i class="{{ section.settings.info_3_i }}"></i>
                        </div>
                        <div class="contact-info-title">
                            {{ section.settings.info_3_l }}
                        </div>
                        <div class="contact-info-text">
                            {{ section.settings.info_3_r }}
                        </div>
                    </div>
                {% endif %}

                {% if section.settings.info_4_l != blank %}
                    <div class="contact-info">
                        <div class="contact-info-icon">
                            <i class="{{ section.settings.info_4_i }}"></i>
                        </div>
                        <div class="contact-info-title">
                            {{ section.settings.info_4_l }}
                        </div>
                        <div class="contact-info-text">
                            {{ section.settings.info_4_r }}
                        </div>
                    </div>
                {% endif %}

            </div>
            <div class="col-sm-6 col-lg-4 offset-lg-1">
                <h2 class="text-center">{{ section.settings.title_2 }}</h2>
                {% form 'contact', class:"contact-form" %}
                    {% if form.posted_successfully? %}
                        <p class="note form-success">
                            <b>{{ 'contact.form.post_success' | t }}</b>
                        </p>
                    {% endif %}
                    {{ form.errors | default_errors }}
                    {% assign name_attr = 'contact.form.name' | t | handle %}
                    {% assign name_attr = 'contact.form.phone' | t | handle %}
                    <div class="form-group">
                        <label class="text-dark">{{ 'contact.form.name' | t }}</label>
                        <input class="form-control" type="text" id="ContactFormName" name="contact[name]"   value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
                    </div>
                    <div class="form-group">
                        <label class="text-dark"><span class="required">*</span>{{ 'contact.form.email' | t }}</label>
                        <input class="form-control" type="email" id="ContactFormEmail" name="contact[email]"   value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
                    </div>
                    <div class="form-group">
                        <label class="text-dark">{{ 'contact.form.phone' | t }}</label>
                        <input class="form-control"  type="tel" id="ContactFormPhone" name="contact[phone]" pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
                    </div>
                    <div class="form-group">
                        <label class="text-dark">{{ 'contact.form.message' | t }}</label>
                      <textarea type="text" class="form-control textarea--height-100" id="ContactFormMessage" name="contact[body]" value="{% if form.body %}{{ form.body }}{% endif %}"></textarea>
                    </div>
                    <button class="btn mt-15" type="submit">{{ 'contact.form.submit' | t }}</button>
                {% endform %}
            </div>
        </div>
    </div>
</div>
<div class="holder fullwidth">
    <div class="container px-0">
        <div class="contact-map">
            {{ section.settings.iframe | replace:'frameborder="0"','' }}
        </div>
    </div>
</div>
