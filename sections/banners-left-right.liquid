{% unless settings.slides_mode %}
<div class="holder fullwidth full-nopad {{ section.settings.outer_margin }}">
    <div class="container">
        <div class="row no-gutters bnr-grid">
            <div class="col-md">
                <div class="bnr banner-left-right bnr--style-1 bnr--center bnr--middle bnr-hover-scale has-loader">
                    {% assign _img = section.settings.image_1 %}
                    {% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                    {%- if _img -%}
                        <img class="lazyload blur-up"
                             data-src="{{ img_url }}"
                             data-widths="[900, 1200, 1800]"
                             data-aspectratio="{{ _img.aspect_ratio }}"
                             data-sizes="auto"
                             alt="">
                    {%- else -%}
                        {%- include 'image-placeholder-aspect-ratio', width: 1000, height: 550 -%}
                    {%- endif -%}
                    <div class="gdw-loader"></div>
                    <span class="bnr-caption">
					<span class="bnr-text-wrap">
						<span class="bnr-text2" {% if section.settings.text_color_1 != blank %}style="color: {{ section.settings.text_color_1 }}"{% endif %}>{{ section.settings.title_1 }}</span>
                        {% if section.settings.link_1 != blank %}<a href="{{ section.settings.link_1 }}" class="btn-decor btn-decor--md" {% if section.settings.text_color_1 != blank %}style="color: {{ section.settings.text_color_1 }}"{% endif %}>{{ section.settings.link_1_title }}<span class="btn-line" {% if section.settings.text_color_1 != blank %}style="background-color: {{ section.settings.text_color_1 }}"{% endif %}></span></a>{% endif %}
                        <span class="bnr-links" {% if section.settings.text_link_1 != blank %}style="color: {{ section.settings.text_link_1 }}"{% endif %}>
							{{ section.settings.custom_html_1 }}
						</span>
					</span>
				</span>
                </div>
            </div>
            <div class="col-md">
                <div class="bnr banner-left-right bnr--style-1 bnr--center bnr--middle bnr-hover-scale has-loader">
                    {% assign _img = section.settings.image_2 %}
                    {% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                    {%- if _img -%}
                        <img class="lazyload blur-up"
                             data-src="{{ img_url }}"
                             data-widths="[900, 1200, 1800]"
                             data-aspectratio="{{ _img.aspect_ratio }}"
                             data-sizes="auto"
                             alt="">
                    {%- else -%}
                        {%- include 'image-placeholder-aspect-ratio', width: 1000, height: 550 -%}
                    {%- endif -%}
                    <div class="gdw-loader"></div>
                    <span class="bnr-caption">
					<span class="bnr-text-wrap">
						<span class="bnr-text2" {% if section.settings.text_color_2 != blank %}style="color: {{ section.settings.text_color_2 }}"{% endif %}>{{ section.settings.title_2 }}</span>
                        {% if section.settings.link_2 != blank %}<a href="{{ section.settings.link_2 }}" class="btn-decor btn-decor--md" {% if section.settings.text_color_2 != blank %}style="color: {{ section.settings.text_color_2 }}"{% endif %}>{{ section.settings.link_2_title }}<span class="btn-line"{% if section.settings.text_color_2 != blank %}style="background-color: {{ section.settings.text_color_2 }}"{% endif %}></span></a>{% endif %}
                        <span class="bnr-links" {% if section.settings.text_link_2 != blank %}style="color: {{ section.settings.text_link_2 }}"{% endif %}>
							{{ section.settings.custom_html_2 }}
						</span>
					</span>
				</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endunless %}
