{% unless settings.slides_mode %}
<div class="holder fullboxed py-3 py-lg-6 {{ section.settings.outer_margin }} holder-bg-06" {% if section.settings.bg != blank %}style="background-color: {{ section.settings.bg }}"{% endif %}>
    <div class="container">
        <div class="row vert-margin align-items-center row-chess {% if section.settings.reverse %}flex-md-row-reverse{% endif %}">
            <div class="col-md-6 col-lg-7 {% if section.settings.reverse %}text-md-right{% endif %}">
                {% assign _img = section.settings.image %}
                {% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                {%- if _img -%}
                    <img class="lazyload blur-up img-responsive"
                         data-src="{{ img_url }}"
                         data-widths="[540, 720, 900, 1200, 1800]"
                         data-aspectratio="{{ _img.aspect_ratio }}"
                         data-sizes="auto"
                         alt="{{ section.settings.caption_1 }}">
                {%- else -%}
                    {%- include 'image-placeholder-aspect-ratio', width: 614, height: 490 -%}
                {%- endif -%}
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="pr-lg-6">
                    <div class="title-wrap text-center text-md-right">
                        <h2 class="h-xl" {% if section.settings.text_color != blank %}style="color: {{ section.settings.text_color }}"{% endif %}>{{ section.settings.caption_1 }}</h2>
                        <h3 class="h1-style" {% if section.settings.text_color != blank %}style="color: {{ section.settings.text_color }}"{% endif %}>{{ section.settings.caption_2 }}</h3>
                    </div>
                    <p {% if section.settings.text_color != blank %}style="color: {{ section.settings.text_color }}"{% endif %}>{{ section.settings.description }}</p>
                    {% if section.settings.link != blank %}<div class="text-center mt-3"><a href="{{ section.settings.link }}" class="btn-decor" {% if section.settings.text_color != blank %}style="color: {{ section.settings.text_color }}"{% endif %}>{{ section.settings.link_title }}</a></div>{% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endunless %}
