{% unless settings.slides_mode %}

<div class="holder boxed {{ section.settings.outer_margin }}">
	<div class="container">
		<a href="{{ section.settings.link | default:'#' }}" class="category-with-bg" {% if section.settings.bg != blank %}style="background-color: {{ section.settings.bg }}"{% endif %}>
			<div class="category-with-bg-text {% if section.settings.reverse %}order-1{% endif %}">
				<h3 class="category-with-bg-title" {% if section.settings.text_color != blank %}style="color: {{ section.settings.text_color }}"{% endif %}>{{ section.settings.caption_1 }}</h3>
				<h4 class="category-with-bg-subtitle" {% if section.settings.text_color != blank %}style="color: {{ section.settings.text_color }}"{% endif %}>{{ section.settings.caption_2 }}</h4>
			</div>
			<div class="category-with-bg-image {% if section.settings.reverse %}order-0{% endif %}">
				{% assign _img = section.settings.image %}
				{% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
				{%- if _img -%}
					<img class="lazyload blur-up"
						 data-src="{{ img_url }}"
						 data-widths="[540, 720, 900, 1200, 1800]"
						 data-aspectratio="{{ _img.aspect_ratio }}"
						 data-sizes="auto"
						 alt="">
				{%- else -%}
					{%- include 'image-placeholder-aspect-ratio', width: 530, height: 400 -%}
				{%- endif -%}
			</div>
		</a>
	</div>
</div>
{% endunless %}
{% schema %}
{
"name": "Banner + text Style 8",
"class": "index-section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type":"checkbox",
"id":"reverse",
"label":"Reverse Image",
"default":false
},
{
"type":"color",
"id":"bg",
"label":"Section Background Color"
},
{
"type":"color",
"id":"text_color",
"label":"Text Color"
},
{
"type": "header",
"content": "General"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"recommended width 532x399 (like in demo)"
},

{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "header",
"content": "CAPTIONS"
},
{
"type": "text",
"id": "caption_1",
"label": "Caption 1",
"default":"Summer Collection"
},
{
"type": "text",
"id": "caption_2",
"label": "Caption 2",
"default":"FOR MEN"
}
],
"presets": [
{
"name": "Banner + text Style 8",
"category": "Banners"
}
]
}
{% endschema %}