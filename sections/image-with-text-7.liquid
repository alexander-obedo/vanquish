{% unless settings.slides_mode %}
<div class="holder fullboxed py-3 py-md-7 holder-bg-08"  {% if section.settings.bg != blank %}style="background-color: {{ section.settings.bg }}"{% endif %}>>
	<div class="container">
		<a href="{{ section.settings.link_1 | default:'#' }}" class="bnr bnr-discount bnr-discount--left">
			<div class="row">
				<div class="col-md">
					<div class="bnr-discount-caption">
						<div class="bnr-discount-text-wrap" {% if section.settings.bg_1 != blank %}style="background-color: {{ section.settings.bg_1 }}"{% endif %}>
							<div class="bnr-text1">{{ section.settings.caption_1 }}</div>
							<div class="bnr-text2">{{ section.settings.desc_1 }}</div>
						</div>
					</div>
				</div>
				<div class="col-md bnr-discount-image">
                    {% assign _img = section.settings.image_1 %}
                    {% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                    {%- if _img -%}
						<img class="lazyload blur-up img-responsive"
							 data-src="{{ img_url }}"
							 data-widths="[720, 900, 1200, 1800]"
							 data-aspectratio="{{ _img.aspect_ratio }}"
							 data-sizes="auto"
							 alt="{{ section.settings.caption_1 }}">
                    {%- else -%}
                        {%- include 'image-placeholder-aspect-ratio', width: 555, height: 460 -%}
                    {%- endif -%}
				</div>
			</div>
		</a>
		<a href="{{ section.settings.link_2 | default:'#' }}" class="bnr bnr-discount bnr-discount--right">
			<div class="row">
				<div class="col-md">
					<div class="bnr-discount-caption">
						<div class="bnr-discount-text-wrap" {% if section.settings.bg_2 != blank %}style="background-color: {{ section.settings.bg_2 }}"{% endif %}>
							<div class="bnr-text1">{{ section.settings.caption_2 }}</div>
							<div class="bnr-text2">{{ section.settings.desc_2 }}</div>
						</div>
					</div>
				</div>
				<div class="col-md bnr-discount-image">
                    {% assign _img = section.settings.image_2 %}
                    {% assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                    {%- if _img -%}
						<img class="lazyload blur-up img-responsive"
							 data-src="{{ img_url }}"
							 data-widths="[720, 900, 1200, 1800]"
							 data-aspectratio="{{ _img.aspect_ratio }}"
							 data-sizes="auto"
							 alt="{{ section.settings.caption_2 }}">
                    {%- else -%}
                        {%- include 'image-placeholder-aspect-ratio', width: 555, height: 460 -%}
                    {%- endif -%}
				</div>
			</div>
		</a>
	</div>
</div>
{% endunless %}
