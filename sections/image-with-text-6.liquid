{% unless settings.slides_mode %}
<div class="holder fullboxed full-nopad {{ section.settings.outer_margin }} holder-bg-07" {% if section.settings.bg != blank %}style="background-color: {{ section.settings.bg }}"{% endif %}>
    <div class="container">
        <div class="row row-chess {% if section.settings.reverse %}flex-md-row-reverse{% endif %}">
            <div class="{% if section.settings.reverse %}chess-left-bg{% else %}chess-right-bg{% endif %} lazyload blur-up" {% if section.settings.image %}data-bgset="{% include 'bgset', image: section.settings.image %}" data-sizes="auto"{% endif %}>            {%- if section.settings.image == blank -%}<div class="placeholder-bg">{% include 'image-placeholder-bg', text: '800x466' %}</div>{%- endif -%}</div>
            <div class="col-md-6">
                <div class="py-6 py-md-10 px-md-6">
                    <h2 class="h1-style text-center">{{ section.settings.caption_1 }}</h2>
                    <p>{{ section.settings.description }}</p>
                    {% if section.settings.link != blank %}<div class="text-center mt-2"><a href="{{ section.settings.link }}" class="btn-decor">{{ section.settings.link_title }}</a></div>{% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endunless %}
{% schema %}
{
"name": "Banner + text Style 6",
"class": "index-section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type":"checkbox",
"id":"reverse",
"label":"Reverse Image",
"default":false
},
{
"type":"color",
"id":"bg",
"label":"Section Background Color"
},
{
"type": "header",
"content": "General"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"recommended width 800x466 (like in demo)"
},
{
"type": "text",
"id": "link_title",
"label": "Link title",
"default":"Shop Now"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "header",
"content": "CAPTIONS"
},
{
"type": "text",
"id": "caption_1",
"label": "Title",
"default":"Follow us on instagram"
},
{
"type": "textarea",
"id": "description",
"label": "Description",
"default":"Lorem ipsum dolor sit amet consestuer adicpising elitr anno dolor sit amet. Lorem ipsum dolor sit amet consestuer adicpising elitr anno dolor sit amet."
}

],
"presets": [
{
"name": "Banner + text Style 6",
"category": "Banners"
}
]
}
{% endschema %}