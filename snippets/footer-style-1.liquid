<footer class="page-footer  footer-style-1  {{ section.settings.outer_margin }}">
    {% if section.settings.shop_info_yes %}
        <div class="holder bgcolor bgcolor-1 mt-0" {% if settings.shop_info_bg_color != blank %}style="background-color: {{ settings.shop_info_bg_color }}"{% endif %}>
            <div class="container">
                <div class="row shop-features-style3">
                    {% include 'footer_shop_info' %}
                </div>
            </div>
        </div>
    {% endif %}
    {% if section.settings.newsletter %}{% include 'newsletter-inline' %}{% endif %}
    <div class="footer-top container">
        <div class="row py-md-4">
            <div class="{% if section.settings.navigation_4_yes %}col-md-4{% else %}col-md-3{% endif %} col-lg">
                <div class="footer-block collapsed-mobile">
                    {% if section.settings.navigation_1 != blank %}
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_1].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_1].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 1</p>
                    {% endif %}
                </div>
            </div>
            <div class="{% if section.settings.navigation_4_yes %}col-md-4{% else %}col-md-3{% endif %} col-lg">
                <div class="footer-block collapsed-mobile">
                    {% if section.settings.navigation_2 != blank %}
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_2].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_2].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 2</p>
                    {% endif %}
                </div>
            </div>
            <div class="{% if section.settings.navigation_4_yes %}col-md-4{% else %}col-md-3{% endif %} col-lg">
                <div class="footer-block collapsed-mobile">
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_3].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_3].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                </div>
            </div>
            {% if section.settings.navigation_4_yes %}
            <div class="col-md-4 col-lg">
              <div class="footer-block collapsed-mobile">
                {% if section.settings.navigation_4 != blank %}
                <div class="title">
                  <h4>{{ linklists[section.settings.navigation_4].title }}</h4>
                  <div class="toggle-arrow"></div>
                </div>
                <div class="collapsed-content">
                  <ul>
                    {% for link in linklists[section.settings.navigation_4].links %}
                    <li>
                      {{ link.title | append:label | link_to: link.url }}
                    </li>
                    {% endfor %}
                  </ul>
                </div>
                {% else %}
                <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 4</p>
                {% endif %}
              </div>
            </div>
            {% endif %}
            <div class="col-md-8 col-lg-3">
                {% if section.settings.support_time != blank or section.settings.support_time_title != blank %}
                <div class="footer-block collapsed-mobile">
                    <div class="title">
                        <h4>{{ section.settings.support_time_title }}</h4>
                        <div class="toggle-arrow"></div>
                    </div>
                    <div class="collapsed-content">
                        {{ section.settings.support_time }}
                    </div>
                </div>
                {% endif %}
                {% if section.settings.chat_yes %}
                <h4 class="title">{{  section.settings.chat_link }}</h4>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="footer-bottom container">
        <div class="row lined py-2 py-md-3">
            <div class="col-md-2 hidden-mobile">
                {% include 'footer-logo' %}
            </div>
            <div class="col-md-6 col-lg-5 footer-copyright">
                {{ section.settings.copyright }}
            </div>
            <div class="col-md-auto">
                {% include 'footer_payments' %}
            </div>
            <div class="col-md-auto ml-lg-auto">
                {% include 'social-media-links' %}
            </div>
        </div>
    </div>
</footer>