<div class="prd-vertical-sm">
    <div class="prd-img">
        <a href="{{ product.url }}">
            {% assign _img = product.featured_image %}
            {% assign _img_size = '93x' %}
            {% if _img %}
                <img class="lazyload blur-up js-prd-img"
                     data-src="{{ _img | img_url: _img_size }}"
                     data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                     data-aspectratio="{{ _img.aspect_ratio }}"
                     data-sizes="auto"
                     alt="{{ _img.alt | escape }}">
            {%- else -%}
                {% include 'image-placeholder-aspect-ratio', width: 93, height: 110, text: '&nbsp;' %}
            {%- endif -%}
        </a>
    </div>
    <div class="prd-info">
        {% if settings.show_vendor %}<div class="prd-tag"><span>{{ product.vendor }}</span></div>{% endif %}
        <h2 class="prd-title"><a href="{{ product.url }}">{{ product.title }}</a></h2>
        <div class="prd-rating"><span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span></div>
        {% include 'product-card-price' %}
    </div>
</div>